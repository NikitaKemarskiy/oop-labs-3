<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>com.nikita.controller.servlet.auth.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorLogin</servlet-name>
        <servlet-class>com.nikita.controller.servlet.auth.DoctorLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NurseLogin</servlet-name>
        <servlet-class>com.nikita.controller.servlet.auth.NurseLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.nikita.controller.servlet.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDoctors</servlet-name>
        <servlet-class>com.nikita.controller.servlet.admin.DoctorsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/login/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorLogin</servlet-name>
        <url-pattern>/login/doctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NurseLogin</servlet-name>
        <url-pattern>/login/nurse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDoctors</servlet-name>
        <url-pattern>/admin/doctors</url-pattern>
    </servlet-mapping>
</web-app>